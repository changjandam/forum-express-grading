<h1>人氣餐廳</h1>
<hr />
<div class="d-flex flex-column align-items-center">
  {{#each restaurants}}
  <div class="row border w-75 flex-nowrap my-2">
      <img src="{{image}}" class="mw-50">  
    <div class="ml-2 p-1">
      <h2>{{name}}</h2>
      <span class="badge badge-secondary">
        收藏數：{{favoritedUserCount}}
        </span>
      <p>{{description}}</p>
      <div class="d-flex">
        <a href="/restaurants/{{id}}" class="btn btn-primary mr-1">show</a>
        {{#if isFavorited}}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="mr-1"><button type="submit"
            class="btn btn-danger">移除最愛</button></form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" class="mr-1"><button type="submit"
            class="btn btn-primary">加到最愛</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>